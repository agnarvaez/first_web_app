%h2 Listing of categories

%table.table.table-hover
  %thead
    %tr
      %th Categories
      %th
      %th
      %th

  %tbody
    - @categories.each do |category|
      %tr
        %td= category.title
        %td= link_to 'Show', category, class: 'btn btn-warning btn-md'
        %td= link_to 'Edit', edit_category_path(category), class: 'btn btn-success btn-md'
        %td= link_to 'Destroy', category, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn btn-danger btn-md'

%br

= link_to 'New Category', new_category_path, class: 'btn btn-primary btn-md'
