%h2 Listing of Books

%table.table.table-hover
  %thead
    %tr
      %th ID
      %th Title
      %th Author
      %th Price
      %th Category
      %th Publisher
      %th Publish date
      %th Isbn

  %tbody
    - @books.each do |book|
      %tr
        %td= book.id
        %td= book.title
        %td
        %td= book.price
        %td= book.category
        %td= book.publisher
        %td= book.publish_date
        %td= book.isbn
        %td= link_to 'Show', book, class: 'btn btn-success btn-md'
        %td= link_to 'Edit', edit_book_path(book), class: 'btn btn-warning btn-md'
        %td= link_to 'Delete', book,class: 'btn btn-danger btn-md', :method => :delete, :data => { :confirm => 'Are you sure you want to delete this entry?' }

= link_to 'New Book', new_book_path, class: 'btn btn-primary btn-md'
