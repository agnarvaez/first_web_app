
%table.table-condensed
  %thead
    %tr
    %th Title:
    %td= @book.title

    %tr
    %th Author:
    %td= @book.authors.collect(&:full_name).to_sentence

    %tr
    %th Price:
    %td= @book.price

    %tr
    %th Category:
    %td= @book.price

    %tr
    %th Publisher:
    %td= @book.publisher

    %tr
    %th Publish date:
    %td= @book.publish_date

    %tr
    %th ISBN:
    %td= @book.isbn

%table.table-condensed
  %thead
    %tr
    %td= link_to 'Edit', edit_book_path(@book), class: 'btn btn-primary btn-md'
