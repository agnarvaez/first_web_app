%h2 Listing of publishers

%table.table.table-hover
  %thead
    %tr
      %th Title
      %th City
      %th State
      %th
      %th
      %th

  %tbody
    - @publishers.each do |publisher|
      %tr
        %td= publisher.title
        %td= publisher.city
        %td= publisher.state
        %td= link_to 'Show', publisher, class: 'btn btn-danger btn-md'
        %td= link_to 'Edit', edit_publisher_path(publisher), class: 'btn btn-warning btn-md'
        %td= link_to 'Destroy', publisher, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'btn btn-success btn-md'

%br

= link_to 'New Publisher', new_publisher_path, class: 'btn btn-primary btn-md'
